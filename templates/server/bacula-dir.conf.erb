# Definicao do director

Director {
  Name = <%= @dirname %>
  Description = "<%= @hostname %> director"
  DIRport = <%= @dirport %>
  Password = "<%= @dirpw %>"
  QueryFile = "/etc/bacula/scripts/query.sql"
  WorkingDirectory = "/var/lib/bacula"
  PidDirectory = "/var/run/bacula"
  Maximum Concurrent Jobs = <%= @dirmaxjobs %>
  Messages = MensagensPadrao
}

